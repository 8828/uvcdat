
if(UNIX)
  set(ENV{LD_LIBRARY_PATH} "@CMAKE_CURRENT_BINARY_DIR@/python-build/lib")
  set(ENV{CXX} "@CMAKE_CXX_COMPILER@")
  
  set(ENV{LD_LIBRARY_PATH} "@CMAKE_CURRENT_BINARY_DIR@/tcl-install/lib:$ENV{LD_LIBRARY_PATH}")
  set(ENV{LDFLAGS} "-L@CMAKE_CURRENT_BINARY_DIR@/tcltk-install/lib")
  set(ENV{CPPFLAGS} "-I@CMAKE_CURRENT_BINARY_DIR@/tcltk-install/include")
  set(with_tcl_param "--with-tcl=@CMAKE_CURRENT_BINARY_DIR@/tcltk-install")
  
  EXECUTE_PROCESS( 
    COMMAND sh configure --prefix=@CMAKE_CURRENT_BINARY_DIR@/python-build ${with_tcl_param} --enable-unicode=ucs2 --enable-shared
    WORKING_DIRECTORY "@python_base@"
    RESULT_VARIABLE rv
    )
endif()
